{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Parameters": {
        "ApplicationTagName": {
            "Description": "Tag used for the resources",
            "Type": "String"
        },
        "UserPoolName": {
            "Description": "Name of UserPool resource",
            "Type": "String"
        }
    },
    "Resources": {
        "UserPoolResource": {
            "Type": "AWS::Cognito::UserPool",
            "Properties": {
                "UserPoolName": {
                    "Ref": "UserPoolName"
                },
                "UserPoolTags": [
                    {
                        "Key": "application",
                        "Value": {
                            "Ref": "ApplicationTagName"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "UserPoolResource": {
            "Value": {
                "Fn::GetAtt": [
                    "UserPoolResource",
                    "UserPoolName"
                ]
            }
        }
    }
}